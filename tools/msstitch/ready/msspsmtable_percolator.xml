<tool id="msspsmtable_percolator" name="Add Percolator data">
    <requirements>
        <requirement type="package" version="2.2">msstitch</requirement>
    </requirements>
    <description>from mzIdentML to PSM table</description>
    <command>
	    msspsmtable percolator -i '$psmtable' --mzid '$mzid' -o '$output'
    </command>
    <inputs>
        <param name="mzidtsv" type="data" format="mzidtsv" 
		label="Search table from MSGF+"/>
        <param name="mzid" type="data" format="mzid"
		label="Percolated MSGF+ mzIdentML data"/>
    </inputs>
    <outputs>
        <data format="mzidtsv" name="output"/>
    </outputs>
    <help>
	    Takes a TSV table with MSGF+ data and adds corresponding Percolator
	    data to the table.
    </help>

</tool>

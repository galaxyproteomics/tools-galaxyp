            <param name="labeledAggregationLight" type="select" label="Light">
                <option value="Mean">Mean</option>
                <option value="Median">Median</option>
                <option value="Sum">Sum</option>
            </param>
            <param name="labeledAggregationHeavy" type="select" label="Heavy">
                <option value="Mean">Mean</option>
                <option value="Median">Median</option>
                <option value="Sum">Sum</option>
            </param>
            <param name="labeledAggregationRatio" type="select" label="Ratio">
